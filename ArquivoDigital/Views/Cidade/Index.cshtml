@model IEnumerable<ArquivoDigital.Entity.Cidade>

@{
    ViewBag.Title = "Cidades";
}

<h2>Cidades</h2>

<p>
    @Html.ActionLink("Nova Cidade", "Edit", new { id = 0})
</p>
<table class="table">
    <tr>
        <th>
            <b>Cidade</b>
        </th>
        <th>
            <b>Estado</b>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NomeCidade)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UnidadeFederativa.NomeEstado)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.IdCidade }) |
            @Html.ActionLink("Excluir", "Delete", new { id = item.IdCidade }, new { @onclick = "return confirm('Confirma Exclusão?');" })
        </td>
    </tr>
}

</table>
