@model ArquivoDigital.Entity.Endereco

@{
    ViewBag.Title = @ViewBag.Titulo;
}

<h2>@ViewBag.Titulo</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Endereco</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.IdEndereco)

        <div class="form-group">
            @Html.LabelFor(model => model.Logradouro, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Logradouro)
                @Html.ValidationMessageFor(model => model.Logradouro)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Complemento, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Complemento)
                @Html.ValidationMessageFor(model => model.Complemento)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Numero, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Numero)
                @Html.ValidationMessageFor(model => model.Numero)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CEP, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CEP)
                @Html.ValidationMessageFor(model => model.CEP)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Bairro, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Bairro)
                @Html.ValidationMessageFor(model => model.Bairro)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Cidade.UF, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("UF")
                @Html.ValidationMessageFor(model => model.Cidade.UF)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IdCidade, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("IdCidade")
                @Html.ValidationMessageFor(model => model.IdCidade)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IdPessoa, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("IdPessoa")
                @Html.ValidationMessageFor(model => model.IdPessoa)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Voltar", "Index")
</div>
