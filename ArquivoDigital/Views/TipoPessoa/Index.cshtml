@model IEnumerable<ArquivoDigital.Entity.TipoPessoa>

@{
    ViewBag.Title = "Tipo Pessoa";
}

<h2>Tipo Pessoa</h2>

<p>
    @Html.ActionLink("Novo Tipo Pessoa", "Edit", new {id = 0 })
</p>
<table class="table">
    <tr>
        <th>
            <b>Descrição</b>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.IdTipoPessoa }) |
            @Html.ActionLink("Excluir", "Delete", new { id = item.IdTipoPessoa }, new { @onclick = "return confirm('Confirma Exclusão?');" })
        </td>
    </tr>
}

</table>
