@model IEnumerable<ArquivoDigital.Entity.UnidadeFederativa>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Novo Estado", "Edit", new { id = ""})
</p>
<table class="table">
    <tr>
        <th>
            <b>Sigla</b>
        </th>
        <th>
            <b>Nome do Estado</b>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UF)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NomeEstado)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.UF}) |
            @Html.ActionLink("Excluir", "Delete", new { id = item.UF }, new { @onclick = "return confirm('Confirma Exclusão?');" })
        </td>
    </tr>
}

</table>
